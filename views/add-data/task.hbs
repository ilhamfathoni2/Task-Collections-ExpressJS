{{> header}}
{{> nav}}

<div class="container">

<div class="container mt-3 mb-3">
    {{#if message}}
        <div class="alert alert-{{message.type}} mt-5 mb-3" role="alert">
            {{message.message}}
        </div>
    {{/if}}
</div>

<a href="/" class="btn btn-secondary mt-2 mb-3"> < Back</a>


<div class="card mt-2 mb-3" style="width: 18rem;">
  <div class="card-body text-center">
    <h5 class="card-title"><b>{{collection}}</b></h5>
  </div>
</div>

<div class="shadow-lg p-3 mb-5 bg-body rounded">
<div class="card mt-3">
    <div class="card-header">
        <a href="/add-task" class="btn btn-primary mt-3 mb-2"><b>+</b> Add New Task</a>
    </div>
    <div class="card-body">
        <table class="table">
            <tr>
                <th>Task</th>
                <th class="text-center">Status</th>
                <th class="text-center">Action</th>
            </tr>
            {{#each task}}
            <tr>
                <td>{{this.name}}</td>
                <td class="text-center">
                    <h5><span class="badge bg-info text-dark">
                        {{this.is_done}}</span></h5>
                </td>
                <td class="text-center">
                    <a href="/update-task/{{this.id_task}}" class="btn btn-warning">Update</a>
                    <a href="/delete-task/{{this.id_task}}" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>
</div>



</div>

{{> footer}}