{{> header}}
{{> nav}}

<div class="container">

<div class="container mt-3">
    {{#if message}}
        <div class="alert alert-{{message.type}}" role="alert">
            {{message.message}}
        </div>
    {{/if}}
</div>

{{#if isLogin}}
<div class="container-fluid d-flex justify-content-center">
    <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
    <b>+</b> Add New Collections
    </button>
</div>
{{else}}

{{/if }}

    <section>
        <div class="container-fluid d-flex justify-content-center">
            <div class="row mt-4">
                {{#each collections}}
                <div class="col-sm">
                <div class="shadow-lg p-3 mb-5 bg-body rounded">
                    <div class="mt-4">
                        <div class="card-body">
                            <h3 class="card-title p-4">{{this.name_collection}}</h3>
                            <div class="d-grid gap-2 mt-5">
                                <a href="/task/{{this.id_collect}}" class="btn btn-primary">Task</a>
                                <a href="/edit/{{this.id_collect}}" class="btn btn-warning">Edit</a>
                                <a href="/delete/{{this.id_collect}}" class="btn btn-danger">Delete</a>
                            </div> 
                        </div>
                    </div>
                </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
            





</div>



<!-- Modal Insert-->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <form action="/" method="post">
            <div class="mb-3">
                <label class="form-label">Collection name</label>
                <input type="text" class="form-control" name="name_collection">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
    </div>
  </div>
</div>

{{> footer}}