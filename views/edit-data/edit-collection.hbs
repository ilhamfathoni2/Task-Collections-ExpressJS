{{> header}}
{{> nav}}

<div class="container">

<div class="container mt-3 mb-3">
    {{#if message}}
        <div class="alert alert-{{message.type}} mt-5 mb-3" role="alert">
            {{message.message}}
        </div>
    {{/if}}
</div>

<a href="/" class="btn btn-secondary"> < Back</a>

<div class="shadow-lg p-3 mb-5 bg-body rounded">
<div class="card mt-3">
    <div class="card-header">
        Edit Collection
    </div>
    <div class="card-body">
        {{#each collections}}
        <form action="/edit/{{this.id_collect}}" method="post">
        <div class="mb-3">
            <label class="form-label">Collection Name</label>
            <input type="text" class="form-control" name="name_collection" value="{{this.name_collection}}">
        </div>
        <button type="submit" class="btn btn-primary">Save Edit</button>
        </form>
        {{/each}}
    </div>
</div>
</div>



</div>

{{> footer}}